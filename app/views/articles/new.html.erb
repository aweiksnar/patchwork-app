<div class="row">
  <section>
    <div class="container">

    <h1>New Article</h1>

    <%= form_for @article do |f| %>

      <div>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
      </div>

      <div>
        <%= f.label :url %><br/>
        <%= f.text_field :url %>
      </div>

      <div>
        <%= f.label :bookmark %><br/>
        <%= f.check_box :bookmark? %>
      </div>

      <div>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
      </div>

      <div>
      <%= f.select :topic, options_from_collection_for_select(Topic.all, "id", "title") %>
      </div>

      <div>
      <%= f.select :subtopic_id, options_from_collection_for_select(Subtopic.all, "id", "title") %>
      </div>

      <div>
        <%= f.label :level  %>
        <%= f.select :level, options_for_select([['Beginner', 1], ['Intermediate', 2], ['Advanced', 3]], 1) %>
      </div>


      <div>
        <%= f.submit "Create Article" %>
      </div>
    <% end %>

    </div>
  </section>
</div>
