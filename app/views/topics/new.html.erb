<div class="container">
  <div class="row">
    <div class="span12">
      <h1>Submit a Topic</h1>
    </div>
  </div>
</div>

<section>
  <div class="container">
    <div class="row">
      <div class="content">

      <div class="span7">

        <%= form_tag(topics_url, method: 'post') do %>

          <div>
            <%= label_tag :title, "What topic would you like to submit?" %>
            <%= text_field_tag :title, nil, 'placeholder' => 'Please add a subtopic or resource within it.' %>
          </div>

          <div>
            <%= label_tag :title, "Select the Category this topic falls into" %>
            <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :title), class: "dropdown-submenu" %>
            <p class="details">Don't see a category here? <%= link_to "Add a new category", new_category_url %></p>
          </div>

          <div>
            <%= label_tag :wiki_url, "Wikipedia Url (*optional)" %>
            <%= text_field_tag :wiki_url, nil, 'placeholder' => "Enter the Wikipedia URL for your topic and we'll post it"  %>
          </div>
          <%= hidden_field_tag :user_id, value: "#{session[:user_id]}" %>

          <div>
            <%= submit_tag "Create Topic", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>

      <div class="span5">
      </div>

    </div><!--end content -->

    </div>
  </div>
</section>
