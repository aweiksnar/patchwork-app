<h1>New Topic</h1>


<%= form_tag(topics_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :title) %>


  <div>
    <%= submit_tag "Create Topic" %>
  </div>
<% end %>
