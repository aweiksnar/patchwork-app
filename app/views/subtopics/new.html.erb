<div class="container">
  <div class="row">
    <div class="span12">
      <h1>Submit a Subtopic</h1>
    </div>
  </div>
</div>

<section>
  <div class="container">
    <div class="row">
      <div class="content">

      <div class="span7">

        <%= form_tag(subtopics_url, method: 'post') do %>


          <div>
            <%= label_tag :title %>
            <%= text_field_tag :title %>
          </div>

          <div>
            <%= label_tag :topic_id %>
            <%= select_tag :topic_id, options_from_collection_for_select(Topic.all, :id, :title) %>
          </div>

          <div>
            <%= submit_tag "Create Subtopic", :class => "btn btn-success" %>
          </div>
        <% end %>

          </div>

      <div class="span5">
      </div>

    </div><!--end content -->

    </div>
  </div>
</section>

