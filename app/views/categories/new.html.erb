<div class="row">
  <section>
    <div class="container">
      <h1>New Category</h1>


      <%= form_tag(categories_url, method: 'post') do %>


        <div>
          <%= label_tag :title %><br />
          <%= text_field_tag :title %>
        </div>


        <div>
          <%= submit_tag "Create Category", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </section>
</div>
